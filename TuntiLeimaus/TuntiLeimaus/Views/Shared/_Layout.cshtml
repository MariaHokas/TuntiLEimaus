<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <title class="text-left">@ViewBag.Title - TuntiLeimaus</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        body, html {
            background-image: url("../../Images/point_logo1.png");
            background-repeat: no-repeat;
            background-position: left top;
            background-size: 200px;
            margin:5px;
        }
    </style>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed w3-margin-top" style="background-color:rgb(0,0,140);">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle w3-text-white" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("TuntiLeimaus", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
            </div>
        </div>
    </div>
    <div id="bg"></div>
    <div class="w3-container-fluid body-content">
        @RenderBody()
        <hr />
        <footer class="w3-container w3-black w3-center w3-margin-top navbar-bottom" style="background-image:url(../../Images/point_logo1.png)">
            <p class="w3-margin-top">Find us on Social Media</p>
            <a href="https://www.facebook.com/PointCollege1/" class="fa fa-facebook-official fa-2x"></a>
            <a href="https://www.instagram.com/pointcollegeporvoo/" class="fa fa-instagram fa-2x"></a>
            <a href="https://www.linkedin.com/in/maria-ahokas/" class="fa fa-pinterest-p fa-2x"></a>
            <a href="https://twitter.com/Pointcollege" class="fa fa-twitter fa-2x"></a>
            <a href="https://www.linkedin.com/company/porvoo-international-college-oy/" class="fa fa-linkedin fa-2x"></a>
            <p class="w3-margin-top">&copy; @DateTime.Now.Year - TuntiLeimaus</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
