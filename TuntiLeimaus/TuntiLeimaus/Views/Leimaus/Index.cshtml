
@{
    ViewBag.Title = "Index";
}
<!DOCTYPE html>
<html lang="fi">
<head>
    <title>Leimaus</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <style>
        .button {
            background-color: rgb(0,0,140);
            border-radius: 6px;
            color: lightgray;
            padding: 20px 80px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            margin: 4px 2px;
            cursor: pointer;
            box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2), 0 6px 20px 0 rgba(0,0,0,0.19);
        }

        .button2 {
            background-color: rgb(0,0,140);
            border-radius: 6px;
            color: lightgray;
            padding: 20px 90px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            margin: 4px 2px;
            cursor: pointer;
            box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2), 0 6px 20px 0 rgba(0,0,0,0.19);
        }
        .span {
            padding: 20px 90px;
        }
    </style>
</head>
<body>
    
    <!-- w3-content defines a container for fixed size centered content,
    and is wrapped around the whole page content -->
    <div class="w3-content" style="max-width:1400px">

        <!-- Header -->
        <header class="w3-container w3-center w3-padding-32" style="margin:10px">
            <h1><b>TuntiLeimaus</b></h1>
            <p class="w3-text-grey">Tervetuloa Point Collegen </p> <p> <span class="w3-tag w3-text-white" style="background-color:rgb(0,0,140);">Tuntileimaukseen</span></p>
        </header>
        <!-- Grid -->
        <div class="w3-row " style="background-image:url('../../Images/bookcase-1869616_960_720.jpg')">
            <!-- Sites -->
            <div class="w3-twothird">
                <!-- Blog entry -->
                <div class="w3-display-container w3-container "style="background-image:url('../../Images/bookcase-1869616_960_720.jpg')">
                    <div class="w3-margin-top">
                        <div class="w3-bar-block w3-margin-bottom">
                            <div class="w3-col m6">                        
                                <form class="w3-padding-32">
                                    <p><span class="w3-tag w3-text-white span" style="background-color:rgb(60,40,5);">Opiskelijatunnus</span></p>
                                    <input type="text" name="opiskelijatunnus" value="">
                                </form>
                            </div>
                            <div class="w3-col m6">
                                <form class="w3-padding-32">                                   
                                    <p><span class="w3-tag w3-text-white span" style="background-color:rgb(60,40,5);">Luokkahuone</span></p>
                                    <select name="Luokkahuone">
                                        <option value=""></option>
                                        <option value="1000">1000</option>
                                        <option value="1001">1001</option>
                                        <option value="1002">1002</option>
                                        <option value="1003">1003</option>
                                    </select>
                                </form>
                            </div>
                            <div class="w3-col m6">
                                <button class="button"
                                        onclick="document.getElementById('sisään').innerHTML = Date()">
                                    Sisään
                                </button>
                            </div>
                                <div>
                                <p style="background-color:whitesmoke" id="sisään"></p>
                                </div>
                                <div class="w3-col m6">
                                    <button class="button2"
                                            onclick="document.getElementById('ulos').innerHTML = Date()">
                                        Ulos
                                    </button>
                                </div>
                                <div class="w3-col m6">
                                    <p id="ulos"></p>
                                </div>
                        </div>
                    </div>
                </div>
                <hr>
                <!-- END TuntiLeimaus ENTRIES -->
            </div>
            <div class="w3-third">
                <!-- Blog entry -->
                <div class="w3-display-container w3-container w3-margin-top">
                    <div class="w3-col m8 s12">
                        <div class="w3-light-grey">
                            <h3 class="w3-bar-item"><b>Koulun linkit</b></h3>
                            <a href="http://www.pointcollege.fi/" class="w3-bar-item w3-button">Point Gollege</a>
                            <a href="https://www.office.com/?auth=2&home=1" class="w3-bar-item w3-button">Office 365</a>
                            <a href="https://moodle.pointcollege.fi/login/index.php" class="w3-bar-item w3-button">Moodle</a>
                            <a href="https://wilma.pointcollege.fi/" class="w3-bar-item w3-button">Wilma</a>
                        </div>
                    </div>
                </div>
                <hr>
                <!-- END BLOG ENTRIES -->
            </div>
            <!-- Introduction menu -->
            <hr>
        </div>
        <!-- END GRID -->
    </div><br>
</body>
</html>
