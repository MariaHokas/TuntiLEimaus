                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                      
                    </button>
                </div>

                    @*@Html.ActionLink("TuntiLeimaus", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@

                    <div class="collapse navbar-collapse" id="myNavbar">
                        <ul class="nav navbar-nav">
                            @*@Html.ActionLink("TuntiLeimaus", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@
                            <li>@Html.ActionLink("TuntiLeimaus", "Index", "Home")</li>
                            <li>@Html.ActionLink("Opettaja", "Index", "Opettaja")</li>
                            <li>@Html.ActionLink("Oppilas", "Index", "Oppilas")</li>
                            <li class="dropdown">
                                <a class="dropdown-toggle" data-toggle="dropdown">Linkit <span class="caret"></span></a>
                                <div class="dropdown-content">
                                    <a href="http://www.pointcollege.fi/">Point College</a>
                                    <a href="https://www.office.com/?auth=2&home=1">Sähköposti</a>
                                    <a href="https://moodle.pointcollege.fi/login/index.php">Moodle</a>
                                    <a href="https://wilma.pointcollege.fi/">Wilma</a>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
</nav>
    </div>
    @RenderBody()
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <footer class="footer" style="background-color:black;">
        <div class="container" style="padding-top: 20px; padding-bottom:5px; text-align:right; margin-right:10px;">
            <a href="https://www.facebook.com/pointcollege1/" class="fa fa-facebook-official fa-2x" style="color:lightgray; margin-right: 7px;"></a>
            <a href="https://www.instagram.com/pointcollegeporvoo/" class="fa fa-instagram fa-2x" style="color:lightgray; margin-right: 7px;"></a>
